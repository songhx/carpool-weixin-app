page{
    height:100%;
}
.login_box{
    background:url("https://e-carpool.oss-cn-beijing.aliyuncs.com/login_bg.png")  no-repeat;
    width:100%;
    height:100%;
    background-size:100% 100%;
    position:relative;
    display:flex;
    justify-content:center;
}

.btn {
    font-size: 35rpx;
    color: #FFF;
    background-color: #FF8811;
    position:absolute;
    width:350rpx;
    bottom:100rpx;
    border-radius:48rpx;
}

.submit-btn {
    position:absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    height:86rpx;
    background-image: linear-gradient(90deg, #FDA456 3%, #FB6B2B 100%);
    box-shadow: 0 0 7px 0 rgba(251,107,43,0.76);
    border-radius: 39.5rpx;
    text-align:center;
    color: #fff;
    font-size: 12pt;
    line-height: 150%;
    padding: 0;
    border: none;
    bottom:73rpx;
    width:60%;
}
.submit-btn.disabled{
    opacity: .7;
}
.submit-btn:active{
    opacity: .7;
}