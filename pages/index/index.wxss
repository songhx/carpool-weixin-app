  /**Tab**/
.tabbed {
  width: 80%;
  min-width: 400px;
  margin: 0 auto;
  margin-top: 23rpx;
  border-bottom: 2px solid #000;
  overflow: hidden;
  transition: border 250ms ease;
}
.tabbed .tabs {
  margin: 0px;
  padding: 0px;
  overflow: hidden;
  float: left;
  list-style-type: none;
}

.tabbed .tabs view {
  display: block;
  float: right;
  padding:13rpx 21rpx 10rpx;
  background-color:#FFF;
  margin-right:53rpx;
  z-index: 2;
  position: relative;
  transition: all 250ms ease;
  font-size: 10pt;
  font-weight: bold;
  color: #FFF;
  text-shadow: rgba(0,0,0,.1) 0 1px;
}
.tabbed .tabs view:before,
.tabbed .tabs view:after {
  display: block;
  content: " ";
  position: absolute;
  top: 0;
  height: 100%;
  width: 43rpx;
  background-color: #FFF;
  transition: all 250ms ease;
}
.tabbed .tabs view:before {
  right: -24rpx;
  transform: skew(30deg, 0deg);
  box-shadow: rgba(0,0,0,.1) 3px 2px 5px, inset rgba(255,255,255,.09) -1px 0;
}
.tabbed .tabs view:after {
  left: -24rpx;
  transform: skew(-30deg, 0deg);
  box-shadow: rgba(0,0,0,.1) -3px 2px 5px, inset rgba(255,255,255,.09) 1px 0;
}

.tabbed .tabs view.active {
  z-index: 3;
}
.tabbed .tabs view .active,
.tabbed .tabs view .active:before,
.tabbed .tabs view .active:after {
  background-color: #666;
  color: #fff;
}

/**round效果*/
.tabbed.round .tabs view {
  border-radius: 8rpx 8rpx 0 0;
}
.tabbed.round .tabs view:before {
  border-radius: 0 8rpx 0 0;
}
.tabbed.round .tabs view:after {
  border-radius: 8rpx 0 0 0;
}


.tabbed.skin-orange {
  border-bottom-color: #FFB62C;
}
.tabbed.skin-orange .tabs view,
.tabbed.skin-orange .tabs view:before,
.tabbed.skin-orange .tabs view:after {
  background-color: #FFB62C;
}
.tabbed.skin-orange .tabs view:hover,
.tabbed.skin-orange .tabs view:hover:before,
.tabbed.skin-orange .tabs view:hover:after {
  background-color: #FFB62C;
}
.tabbed.skin-orange .tabs view.active,
.tabbed.skin-orange .tabs view.active:before,
.tabbed.skin-orange .tabs view.active:after {
  background-color: #F39C12;
  color: #333;
}

